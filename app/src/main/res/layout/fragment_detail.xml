<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/coord"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <include layout="@layout/content_detail"/>

        <!--<android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_arrow_forward_white_24dp"/>-->

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="bottom"
                android:background="#EAEAEA"
                android:orientation="horizontal"
                android:paddingRight="16dp">

            <ImageView
                    android:id="@+id/comment_back"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@mipmap/ic_coment_back" />

            <EditText
                    android:id="@+id/comment_edit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:hint="写评论..."
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            <ImageView
                    android:id="@+id/comment_number_image"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@mipmap/ic_comment_number" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="-5dp"
                    android:id="@+id/comment_number"
                    android:text="20"
                    android:textSize="19sp"
            />
            <ImageView
                    android:id="@+id/news_collection_image"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:src="@mipmap/news_content_collection_no" />

            <ImageView
                    android:id="@+id/share_image"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:src="@mipmap/news_content_share" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>